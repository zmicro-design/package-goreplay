#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro gor <args ...>"
  echo ""

  gor --help
}

version() {
  # gor --version
  echo "v1.3.2"
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    gor "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
