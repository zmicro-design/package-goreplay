#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro goreplay <args ...>"
  echo ""

  goreplay --help
}

version() {
  # goreplay --version
  echo "v1.3.2"
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    goreplay "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
